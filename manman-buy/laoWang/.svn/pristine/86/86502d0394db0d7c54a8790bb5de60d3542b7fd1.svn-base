/*ÏêÇé*/
body {
    background-color: #fff;
}

.details {
    margin: 4px 10px;
}

.details h3 {
    margin: 10px 0;
}

.details h4 {
    color: #FF841D;
    font-size: 14px;
}

.details p:nth-of-type(1) {
    margin: 18px 4px;
    font-size: 12px;
    color: #999999;
}

.details .desc {
    width: 100%;
}

.details .desc img {
    margin: 10px 0 0 10px;
    width: 120px;
    float: right;
}

.details .desc p {
    margin: 0;
    font-size: 16px;
    color: #606060;
}

