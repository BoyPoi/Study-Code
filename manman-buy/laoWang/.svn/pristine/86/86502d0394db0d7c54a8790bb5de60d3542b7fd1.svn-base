.details a {
    margin: 20px 0 20px;
    display: block;
    width: 100%;
    height: 50px;
    box-sizing: border-box;
    padding-left: 10px;
    padding-right: 10px;
}

.details button {
    margin-top: 10px;
    width: 100%;
    height: 30px;
    background-color: #FF841D;
    border-radius: 5px;
    color: #fff;
}

/*¶þÎ¬Âë*/
.info {
    margin: 20px 10px;
}

.info img {
    width: 100%;
}

/*ÆÀÂÛ*/
.tit{
    font-size: 16px;
    margin: 6px 8px;
}

.reply {
    margin: 6px 8px;
    border: 2px solid #ECEAE8;
}

.reply textarea {
    width: 100%;
    resize: none;
    outline: none;
}

.reply .ctrl {
    width: 100%;
    height: 35px;
    border-top: 1px solid #EEEEEE;
    background-color: #FBFBFB;
}

.reply .ctrl input {
    width: 100px;
    height: 35px;
    float: right;
    background-color: #FF841D;
    color: #fff;
}


