.cu-content {
  padding: 4px 10px;
  background-color: #fff;
  h3 {
    font-size: 18px;
    margin: 10px auto 8px auto;
    font-weight: 800;
    text-align: left;
    color: #5a5a5a;
  }
  h4 {
    color: #ff841d;
    font-size: 15px;
  }
  .info {
    margin: 12px 0 12px 2px;
    font-size: 12px;
    color: #999;
    span {
      margin: 0 2px;
    }
  }
  .content {
    .picwarp {
      width: 120px;
      float: right;
      margin: 12px auto auto 10px;
      img {
        width: 120px;
      }
    }
    .conn {
      font-size: 16px;
      color: #606060;
      line-height: 24px;
      padding-bottom: 20px;
      img {
        max-width: 100%;
        vertical-align: middle;
      }
    }
  }
  .drop {
    margin: 0 20px 0 16px;
    position: relative;
    line-height: 38px;
    ul {
      box-shadow: 1px 2px 5px rgba(0, 0, 0, .1);
      padding: 0 0 10px 0;
      list-style: none;
      border-width: 0 1px 1px 1px;
      border-style: solid;
      width: 138px;
      border-color: #f1f1f1 #f1f1f1 #dbdbdb #f1f1f1;
      background-color: #fff;
      li {
        a {
          display: block;
          padding: 0 10px;
          span {
            display: block;
            border-bottom: 1px dotted #c0c0c0;
            text-align: left;
            strong {
              float: right;
              color: #ff841d;
            }
          }
        }
      }
    }
  }
  .buy {
    a {
      margin: 20px 10px;
      display: block;
      background-color: #ff841d;
      height: 40px;
      line-height: 40px;
      color: #fff;
      font-size: 14px;
      text-align: center;
    }
  }
  .comment {
    background-color: #fff;
    .tit {
      font-size: 14px;
      padding: 6px 8px;
    }
    .reply {
      padding: 6px 8px;
      .form {
        border: 2px solid #ECEAE8;
        border-radius: 2px;
        padding: 4px 0 0 4px;
        background-color: #fff;
        width: 98%;
        margin: 0 auto;
        position: relative;
        textarea {
          width: 100%;
          font-size: 14px;
          line-height: 22px;
          height: 68px;
          color: #666;
        }
        .ctrl {
          background-color: #fbfbfb;
          height: 36px;
          margin-left: -4px;
          border-top: 1px solid #f2f2f2;
          input {
            position: absolute;
            bottom: -2px;
            right: -2px;
            height: 39px;
            width: 100px;
            border: 2px solid #ff841d;
            background-color: #ff841d;
            color: #fff;
            border-radius: 0 0 2px 0;
            border-left: 0px;
            border-right: 0px;
            font-size: 16px;
            padding: 0;
          }
        }
        .tit {
          font-size: 16px;
          padding: 6px 8px;
        }
      }
    }
    .list {
      ul {
        li {
          padding: 18px 10px;
          background-color: #fff;
          .userimg{
            width: 40px;
            float: left;
            img{
              width: 40px;
              border-radius: 20px;
              vertical-align: middle;
            }
          }
          .con{
            padding-left: 10px;
            overflow: hidden;
            .name {
              font-size: 14px;
              color: #2e8b01;
              margin-bottom: 6px;
              .username {
                color: #5997c0;
                float: left;
              }
              .time{
                font-size: 13px;
                color: #999;
                float: right;
              }
              .content{
                font-size: 15px;
                line-height: 20px;
                color: #606060;
              }
            }
          }
        }
      }
    }
  }
}

