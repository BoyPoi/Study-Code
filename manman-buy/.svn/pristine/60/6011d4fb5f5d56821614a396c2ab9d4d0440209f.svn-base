.gs-product {
    .list {
        border-color: #fff;
        .hd {
            position: relative;
            height: 38px;
            display: flex;
            .filter {
                flex: 1;
                border-bottom: 1px solid #dadada;
                .on{
                    background-color: #fff;
                    line-height: 37px;
                    float: left;
                    width: 33.33%;
                    box-sizing: border-box;
                    position: relative;
                    text-align: center;
                    i{
                        display: block;
                        width: 22px;
                        height: 22px;
                        font-size: 22px;
                        display: inline-block;
                        vertical-align: middle;
                    }
                }
            }
            .search {
                height: 100%;
                padding: 0;
                width: 46px;
                position: relative;
                border-bottom: 1px solid #dadada;
                border-left: 1px solid #dadada;
                text-align: center;
                box-sizing: border-box;
                .icon-search {
                    width: 40px;
                    height: 40px;
                    display: inline-block;
                    font-size: 38px;
                    color: #666;
                }
            }
            .popbox{
                width: 100%;
                position: absolute;
                top: 38px;
                z-index: 999;
                left: 0;
                box-shadow: 0 3px 6px #ddd;
                background-color: #fff;
                li{
                    line-height: 40px;
                    color: #000;
                    padding: 0 10px;
                    border-bottom: 1px solid #dadada;
                    position: relative;
                    a{
                        display: block;
                    }
                    .icon-select{
                        position: absolute;
                        font-size: 20px;
                        font-weight: bold;
                        color: red;
                        display: block;
                        width: 20px;
                        height: 20px;
                        top: 9px;
                        right: 30px;
                    }
                }
            }
        }
    }
    .product-list{
        background-color: #f1f1f1;
        padding: 6px 0;
        li{
            float: left;
            width: 50%;
            a{
                display: block;
                margin: 4px;
                background-color: #fff;
                .pic{
                    width: 100%;
                    text-align: center;
                    img{
                        max-width: 100%;
                        vertical-align: middle;
                    }
                }
                .tit{
                    padding: 0 6px;
                    color:#333;
                    height: 14px;
                    line-height: 14px;
                    font-size: 12px;
                    overflow: hidden;
                    font-weight: 400;
                    text-align: left;
                    margin-top: 6px;
                }
                .other{
                    padding: 6px;
                    .price{
                        color: #f8601d;
                        float: left;
                        font-size: 20px;
                    }
                    .btn{
                        float: right;
                        background-color: #f8601d;
                        font-size: 14px;
                        padding: 4px 10px;
                        border-radius: 3px;
                        color: #fff;
                    }
                }
            }
        }
    }
}